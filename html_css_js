<body>
    <img id="img-area" src="ready.png" alt="" />
    <div class="button-area">
        <button onclick="green()">Green</button>
        <button onclick="red()">Red</button>

    </div>
    

<script>
    var img = document.getElementById("img-area");
    function green() {
        img.src = 'ready.png';
    }

    function red() {
        img.src = 'Code.png';


    }
</script>

